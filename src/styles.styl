blue-base = #415B92

{ selector }
  size: 90px 20px

  [class*='entypo-']:before
    font-family: 'entypo', sans-serif;

  label
    font-size: 16px
    cursor: pointer
    margin: 0
    padding: 5px 10px
    border-radius: 5px
    background: unquote(button_background)
    color: unquote(button_color)
    transition()

    &:hover
      opacity: .8

    span
      upcase()
      font-size: .85em
      font-family: Lato, sans-serif
      font-weight: 900
      -webkit-font-smoothing: antialiased
      padding-left: 6px

  .social
    transform-origin: 50% 0%
    transform: scale(0) translateY(-190px)
    opacity: 0
    transition: all .4s ease
    margin-left: -15px

    &.active
      opacity: 1
      transition: all .4s ease

      // Arrow Offsets
      &.center
        // margin-left: -105px
        margin-left: -45px // depends number of buttons

      &.left
        margin-left: -225px

      &.right
        margin-left: 10px

      // Arrow x-positioning & colors
      &.top
        transform: scale(1) translateY(-90px)

        &.center
          ul
            &:after
              margin: 35px auto
              border-top: 20px solid blue-base

        &.left
          ul
            &:after
              margin: 35px 0px 0px 249px
              border-top: 20px solid #738A8D

        &.right
          ul
            &:after
              margin: 35px 0px 0px 10px
              border-top: 20px solid #E3262E

      &.bottom
        transform: scale(1) translateY(45px)
        margin-top: -14px

        &.center
          ul
            &:after
              margin: -10px auto
              border-bottom: 20px solid blue-base

        &.left
          ul
            &:after
              margin: -10px 0px 0px 249px
              border-bottom: 20px solid #738A8D

        &.right
          ul
            &:after
              margin: -10px 0px 0px 10px
              border-bottom: 20px solid #E3262E

    ul
      relative: left 0 right 0
      //size: 300px 46px
      size: 180px 46px // depends number of buttons
      color: #fff
      background: blue-base
      margin: auto
      padding: 0
      list-style: none

      li
        font-size: 20px
        cursor: pointer
        width: 60px
        margin: 0
        padding: 12px 0
        text-align: center
        float: left
        display: block
        height: 22px
        position: relative
        z-index: 2
        box-sizing: content-box
        transition()

        &:hover
          color: rgba(0,0,0,.5)

      &:after
        content: ''
        display: block
        size: 0
        absolute: left 0 right 0
        border-left: 20px solid transparent
        border-right: 20px solid transparent

    li[class*='twitter']
      background: #5DC9D4
      padding: 12px 0

    li[class*='gplus']
      background: #D5503A
      padding: 12px 0

    li[class*='pinterest']
      background: #C5282F
      padding: 12px 0

    li[class*='paper-plane']
      background: #42C5B0
      padding: 12px 0
